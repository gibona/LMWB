<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/bluetoothdevice_list_fragment">

    <fragment
        android:id="@+id/bluetoothdevice_list_fragment"
        android:name="com.anobig.lmwb.bluetooth.BluetoothDeviceListFragment"
        android:label="@string/bluetooth_device_list">
        <action
            android:id="@+id/show_bluetoothdevice_detail"
            app:destination="@id/bluetoothdevice_detail_fragment" />
    </fragment>
    <fragment
        android:id="@+id/bluetoothdevice_detail_fragment"
        android:name="com.anobig.lmwb.bluetooth.BluetoothDeviceDetailFragment"
        android:label="@string/bluetooth_device_detail"
        tools:layout="@layout/fragment_bluetoothdevice_detail">
        <argument
            android:name="item_id"
            android:defaultValue=""
            app:argType="string" />
    </fragment>
</navigation>